<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">#00000000</item>
        <item name="android:colorBackground">#00000000</item>
        <item name="android:backgroundTint">#00000000</item>
    </style>

    <style name="ZoomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>


    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Background color for the unselected state -->
        <item name="chipBackgroundColor">?attr/myTabBackgroundColor</item>

        <!-- Background color for the selected state -->
        <item name="chipSurfaceColor">?attr/myWindowBackground</item>

        <!-- Optional: Change text color or stroke for better visibility -->
        <item name="chipStrokeColor">?attr/myWindowBackground</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/radio_button</item>
    </style>



</resources>


<!-- Base application theme -->



