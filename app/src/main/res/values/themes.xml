<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PasswordManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/defaultTabBackgroundColor</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->


        <item name="colorPrimaryDark">#0A2320</item>
        <item name="colorAccent">@color/black</item>


        <item name="myWindowBackground">@color/defaultBackgroundColor</item>
        <item name="myTabBackgroundColor">@color/defaultTabBackgroundColor</item>
        <item name="myTabTextColor">@color/defaultTabTextColor</item>
        <item name="myTabTextSelectedColor">@color/defaultTabTextSelectedColor</item>
        <item name="myTabIndicatorColor">@color/defaultTabIndicatorColor</item>
        <item name="myPrimaryTextColor">@color/defaultPrimaryText</item>
        <item name="mySecondaryTextColor">@color/defaultSecondaryText</item>
        <item name="my_icon_back_color">@color/defaultTabBackgroundColor</item>
        <item name="my_icon_front_color">@color/defaultIconFrontColor</item>
        <item name="my_ripple_color">@color/defaultRipppleColor</item>
        <item name="drawable_btn">@drawable/background_btn_green</item>
        <item name="my_icon_color">@color/black</item>


    </style>

    <style name="textviewStyle">
        <item name="android:textColor"> @color/white</item>
        <item name="android:background"> @color/teal_200</item>
        <item name="android:textStyle"> bold</item>
        <item name="android:textSize"> 30sp</item>

    </style>
    <style name="buttonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>

    </style>

</resources>