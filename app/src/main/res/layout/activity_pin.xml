<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/myTabBackgroundColor"
    android:layout_height="match_parent"
    tools:context=".passwordlock.PinActivity">
    <ImageView
        android:layout_marginTop="50dp"
        android:src="@drawable/baseline_lock_24"
        app:tint="?attr/myTabIndicatorColor"
        android:id="@+id/iv_lock"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/iv_lock"
        android:id="@+id/tv_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_pin_circles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_lock"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dot1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_dot_not_selected"

            />
        <ImageView
            android:id="@+id/dot2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_dot_not_selected"

            />
        <ImageView
            android:id="@+id/dot3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_dot_not_selected"

            />
        <ImageView
            android:id="@+id/dot4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_dot_not_selected"

            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/ll_pin_circles"
        android:id="@+id/tv_lock_forgot_pass"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <View
        android:layout_marginTop="20dp"
        android:id="@+id/lock_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="300dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_lock_forgot_pass"
        />
    <include
        android:layout_marginTop="10dp"
        android:id="@+id/btns_lock"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/lock_pin_keyboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock_view"
        />
</androidx.constraintlayout.widget.ConstraintLayout>