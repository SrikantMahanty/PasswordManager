<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/myWindowBackground"
    tools:context=".fragments.PinFragment">



    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bar_backgroud"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/new_logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="?attr/myPrimaryTextColor"
            android:text="@string/password_manager"
            android:textSize="32sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_pin_circles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ll_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dot1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_dot_not_selected"

            />
        <ImageView
            android:id="@+id/dot2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_dot_not_selected"

            />
        <ImageView
            android:id="@+id/dot3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_dot_not_selected"
            android:contentDescription="TODO"

            />
        <ImageView
            android:id="@+id/dot4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_dot_not_selected"

            />
    </LinearLayout>


    <View
        android:layout_marginTop="20dp"
        android:id="@+id/lock_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="300dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/ll_pin_circles"
        />
    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lock_view"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_btn_first"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1lock"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:tag="1"
                android:text="@string/_1"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <Button
                android:id="@+id/btn2lock"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:tag="2"
                android:text="@string/_2"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:tag="3"
                android:text="@string/_3"
                android:textColor="@color/black"
                android:textSize="35sp"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:textColor="@color/black"
                android:background="#00FFFFFF"
                android:tag="4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/_4"
                android:textSize="35sp" />

            <Button
                android:textColor="@color/black"
                android:background="#00FFFFFF"
                android:tag="5"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/_5"
                android:textSize="35sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:tag="6"
                android:text="@string/_6"
                android:textColor="@color/black"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:textColor="@color/black"
                android:background="#00FFFFFF"
                android:tag="7"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/_7"
                android:textSize="35sp" />

            <Button
                android:textColor="@color/black"
                android:background="#00FFFFFF"
                android:tag="8"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/_8"
                android:textSize="35sp" />

            <Button
                android:textColor="@color/black"
                android:background="#00FFFFFF"
                android:tag="9"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/_9"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_fourth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:textColor="@color/black"
                android:background="#00FFFFFF"
                android:tag="0"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/_0"
                android:textSize="35sp" />

            <ImageButton
                android:textColor="@color/black"
                android:src="@drawable/baseline_lock_24"
                android:background="#00FFFFFF"
                android:tag="-"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="35sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>