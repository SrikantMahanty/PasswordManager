<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/myTabBackgroundColor"
    tools:context=".fragments.EditPasswordFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/myTabBackgroundColor"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/title"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:textColor="?attr/myPrimaryTextColor"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="3"
                        android:textColorHint="?attr/mySecondaryTextColor"
                        app:boxStrokeColor="@color/edit_text_background"
                        app:cursorColor="?attr/my_icon_front_color"
                        app:endIconMode="clear_text"
                        app:hintEnabled="false"
                        app:hintTextColor="@color/white"
                        app:startIconTint="@color/white"
                        app:endIconTint="?attr/my_icon_front_color"
                        >

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_title"
                            android:imeOptions="actionSearch"
                            android:lines="1"
                            android:text=""
                            android:textColor="?attr/myPrimaryTextColor"
                            android:textColorHint="?attr/mySecondaryTextColor"
                            android:textSize="15sp" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">


                        <ImageButton
                            android:id="@+id/image_selection"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/icon_background"
                            android:contentDescription="TODO"
                            android:scaleType="fitXY"
                            android:src="@drawable/baseline_add_circle_outline_24"
                            android:visibility="visible"
                            app:tint="?attr/my_icon_color" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/username"
                    android:textColor="?attr/myPrimaryTextColor"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="6"
                        android:textColorHint="?attr/mySecondaryTextColor"
                        app:boxStrokeColor="@color/edit_text_background"
                        app:cursorColor="?attr/my_icon_front_color"
                        app:endIconMode="clear_text"
                        app:hintEnabled="false"
                        app:hintTextColor="@color/white"
                        app:startIconTint="@color/white"
                        app:endIconTint="?attr/my_icon_front_color"
                        >

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_username"
                            android:imeOptions="actionSearch"
                            android:lines="1"
                            android:text=""
                            android:textColor="?attr/myPrimaryTextColor"
                            android:textColorHint="?attr/mySecondaryTextColor"
                            android:textSize="15sp" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/icon_background"
                            android:contentDescription="TODO"
                            android:scaleType="fitXY"
                            android:src="@drawable/baseline_content_copy_24"
                            android:visibility="visible"
                            app:tint="?attr/my_icon_color" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/password"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:textColor="?attr/myPrimaryTextColor"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="6"
                        android:textColorHint="?attr/mySecondaryTextColor"
                        app:boxStrokeColor="@color/edit_text_background"
                        app:cursorColor="?attr/my_icon_front_color"
                        app:hintEnabled="false"
                        app:hintTextColor="@color/white"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="?attr/my_icon_front_color"
                        app:startIconTint="@color/white"
                        app:endIconTint="?attr/my_icon_front_color"
                        app:passwordToggleContentDescription="@string/delete"
                        >

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_your_password"
                            android:imeOptions="actionSearch"
                            android:lines="1"
                            android:text=""
                            android:textColor="?attr/myPrimaryTextColor"
                            android:textColorHint="?attr/mySecondaryTextColor"
                            android:textSize="15sp" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/icon_background"
                            android:contentDescription="TODO"
                            android:scaleType="fitXY"
                            android:src="@drawable/baseline_content_copy_24"
                            android:visibility="visible"
                            app:tint="?attr/my_icon_color" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/details"
                    android:textAllCaps="true"
                    android:textColor="?attr/myPrimaryTextColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="6"
                        android:textColorHint="?attr/mySecondaryTextColor"
                        app:boxStrokeColor="@color/edit_text_background"
                        app:cursorColor="?attr/my_icon_front_color"
                        app:endIconMode="clear_text"
                        app:hintEnabled="false"
                        app:hintTextColor="@color/white"
                        app:startIconTint="@color/white"
                        app:endIconTint="?attr/my_icon_front_color"
                        >

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_details"
                            android:imeOptions="actionSearch"
                            android:lines="1"
                            android:text=""
                            android:textColor="?attr/myPrimaryTextColor"
                            android:textColorHint="?attr/mySecondaryTextColor"
                            android:textSize="15sp" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/icon_background"
                            android:contentDescription="TODO"
                            android:scaleType="fitXY"
                            android:src="@drawable/baseline_content_copy_24"
                            android:visibility="visible"
                            app:tint="?attr/my_icon_color" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/website"
                    android:textAllCaps="true"
                    android:textColor="?attr/myPrimaryTextColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="6"
                        android:textColorHint="?attr/mySecondaryTextColor"
                        app:boxStrokeColor="@color/edit_text_background"
                        app:cursorColor="?attr/my_icon_front_color"
                        app:endIconMode="clear_text"
                        app:hintEnabled="false"
                        app:hintTextColor="@color/white"
                        app:startIconTint="@color/white"
                        app:endIconTint="?attr/my_icon_front_color"
                        >

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_website"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_website"
                            android:imeOptions="actionSearch"
                            android:lines="1"
                            android:text=""
                            android:textColor="?attr/myPrimaryTextColor"
                            android:textColorHint="?attr/mySecondaryTextColor"
                            android:textSize="15sp" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">
                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/icon_background"
                            android:contentDescription="TODO"
                            android:scaleType="fitXY"
                            android:src="@drawable/baseline_content_copy_24"
                            android:visibility="visible"
                            app:tint="?attr/my_icon_color" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect_btn_red"
                android:text="@string/cancel"
                android:textColor="?attr/myPrimaryTextColor" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/positive_btn"
                android:text="@string/save"
                android:textColor="?attr/my_icon_color"/>


        </LinearLayout>


    </LinearLayout>

</ScrollView>