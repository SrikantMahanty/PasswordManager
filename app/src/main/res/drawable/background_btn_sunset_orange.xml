<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/sunsetOrangePrimary"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="@color/sunsetOrangePrimary"/>
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/sunsetOrangePressed"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="@color/sunsetOrangePressed"/>
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/sunsetOrangeDisabled"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="@color/sunsetOrangeDisabled"/>
        </shape>
    </item>
</selector>
